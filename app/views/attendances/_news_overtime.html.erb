<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【<%#= @user.name %>】からの残業申請</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
        <%= form_with(model: @attendance, local: true) do |f| %>
        <table class="table table-bordered table-striped table-condensed overwork-table">
          <thead class="overwork-table">
            <tr>
              <th>日付</th>
              <th>曜日</th>
              <th>終了予定時間</th>
              <th>指定勤務終了時間</th>
              <th>時間外時間</th>
              <th>業務処理内容</th>
              <th>指示者確認㊞</th>
              <th>変更</th>
              <th>勤怠を確認</th>
            </tr>
           </thead>
           
           <tbody>
             <tr>
               <td>日付</td>
               <td>曜日</td>
               <td><%= f.time_field :overtime_at, class: "form-control" %></td>
               <td><%= f.time_field :designated_work_end_time, class: "form-control" %></td>
               <td>時間外</td>
               <td><%= f.text_field :worked_contents, class: "form-control" %></td>
               <td><%= f.select :confirmation_mark, [["なし"],["申請中"],["承認"],["否認"]] %></td>
               <td><%= f.check_box :change, id: "remember_me" %></td>
               <td><%= f.submit "確認", class: "btn btn-primary" %></td>
             </tr>
           </tbody>
          </table>
              <div class="center">
                <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
              </div>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




















