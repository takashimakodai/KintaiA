<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= form_with(model: @attendance, url: attendances_reply_approval_info_user_path(@attendance), local: true, method: :patch) do |f| %>
      <% @user.each do |user| %>
        <h1 class="modal-title">【<%= user.name %>】からの１ヶ月分の勤怠申請</h1>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <table class="table table-bordered table-striped table-condensed overwork-table">
                <thead class="overwork-table">
                  <tr>
                    <th>月</th>
                    <th>指示者確認㊞</th>
                    <th>変更</th>
                    <th>勤怠を確認</th>
                  </tr>
                </thead>
                
                <tbody>
                  <tr>
                    <td><%= l(@first_day, format: :mid) %></td>
                    <td><%= f.select :mark_by_finish, Attendance.mark_by_finishes.keys.to_a, {}, class: "form-control" %></td>
                    <td><%= f.check_box :change_at, id: "remember_me" %></td>
                    <td><%= link_to "確認", user_path, class: "btn btn-primary" %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
        <div class="center">
          <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

















