<%= form_with(model: @base, local: true) do |f| %>
  <%= render 'shared/error_messages_base', object: @base %>

  <%= f.label :base_number, class: "label-base" %>
  <%= f.number_field :base_number, min: 1, class: "form-control" %>
  
  <%= f.label :base_name, class: "label-base" %>
  <%= f.text_field :base_name, class: "form-control" %>
  
  <%= f.label :base_category, class: "label-base" %>
  <%= f.select :base_category, ["出勤", "退勤"], { include_blank: true }, { class: "form-control" } %>
  
  <%= f.submit yield(:button_text), class: "btn btn-block btn-primary btn-new-base" %>

<% end %> 
